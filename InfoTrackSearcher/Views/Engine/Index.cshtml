@model InfoTrackSearcher.Models.SearchModel

@{
    ViewData["Title"] = "Search by Engine";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Search by Search Engine</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Index" onsubmit="return setExecuting();">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Keywords" class="control-label"></label>
                <input asp-for="Keywords" class="form-control" />
                <span asp-validation-for="Keywords" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SearchEngine" class="control-label"></label>
                @Html.DropDownList("SearchEngine",
                        new SelectList(Enum.GetValues(typeof(SearchModel.SearchEngines))),
                        "Select Search Engine",
                        new { @class = "form-control" })
                <span asp-validation-for="SearchEngine" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" style="background-color: orange;border:none;" />
            </div>

            <div class="form-group">
                <label asp-for="Results" class="control-label"></label>
                <input id="ResultField" asp-for="Results" class="form-control" readonly />
                <span asp-validation-for="Results" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
